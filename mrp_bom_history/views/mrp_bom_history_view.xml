<openerp>
    <data>
        <record id="view_bom_history_form" model="ir.ui.view">
            <field name="name">Bill of Material History From</field>
            <field name="model">mrp.bom.history</field>
            <field name="priority" eval="16"/>
            <field name="type">form</field>
            <field name="inherit_id" ref="view_bom_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//form/div[@name='buttons']" position="replace">
                </xpath>
                <field name="product_tmpl_id" position="before">
                    <field name="bom_id"/>
                </field>
                <field name="name" position="before">
                    <field name="create_date"/>
                </field>
            </field>
        </record>
        <record id="view_bom_history_tree" model="ir.ui.view">
            <field name="name">Bill of Material History Tree</field>
            <field name="model">mrp.bom.history</field>
            <field name="priority" eval="16"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="bom_id"/>
                    <field name="name"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
        <record id="view_bom_history_search" model="ir.ui.view">
            <field name="name">Bill of Material History Search</field>
            <field name="model">mrp.bom.history</field>
            <field name="priority" eval="16"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="bom_id" operator="="/>
                    <field name="name"/>
                </search>
            </field>
        </record>
    </data>
</openerp>