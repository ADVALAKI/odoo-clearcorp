<openerp>
    <data>
        <!-- sale.commission.pay.wizard -->
        <!-- action -->
        <record id="action_pay_wizard" model="ir.actions.act_window">
            <field name="name">Commission Payment</field>
            <field name="res_model">sale.commission.pay.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- menu -->
        <menuitem id="menu_pay_wizard"
            parent="base.menu_sales"
            name="Commission Payment"
            action="action_pay_wizard"
            groups="base.group_sale_manager"
            sequence="20"/>
        <!-- view -->
        <record id="view_pay_wizard_form" model="ir.ui.view">
            <field name="name">view.pay.wizard.form</field>
            <field name="model">sale.commission.pay.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Pay Wizard" version="7.0">
                    <group>
                        <field name="period_id"/>
                    </group>
                    <label for="rule_ids"/>
                    <field name="rule_ids"/>
                    <footer>
                        <button name="do_payment" type="object" string="Execute" confirm="Are you sure you want to continue?" class="oe_highlight"/> or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- sale.commission.modify.wizard -->
        <!-- action -->
        <act_window id="action_modify_wizard"
            multi="True"
            key2="client_action_multi"
            name="Pay Commissions"
            res_model="sale.commission.modify.wizard"
            src_model="sale.commission.commission"
            view_mode="form"
            target="new"
            view_type="form" />
        <!-- view -->
        <record id="view_modify_wizard_form" model="ir.ui.view">
            <field name="name">view.modify.wizard.form</field>
            <field name="model">sale.commission.modify.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Pay Commissions">
                    <p class="oe_grey">
                        This wizard allows you to pay commissions in bulk.
                    </p>
                    <footer>
                        <button string="Pay Commissions" name="commission_pay" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>