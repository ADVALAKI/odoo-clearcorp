       <record id="view_budget_move_form" model="ir.ui.view">
       	 <field name="name">budget.move.form</field>
            <field name="model">budget.move</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            	<form string="Budget Move" version="7.0" >
            		<header>
            		    <!-- 
            			    <button name="button_cancel" states="draft,reserve" string="Cancel" />
            			    <button name="button_draft" states="reserved" string="Back to draft"/>
                            <button name="button_reserve" states="draft" string="Reserve" />
                	        <button name="button_compromise" states="reserved" string="Compromise" />
                	        <button name="button_execute" states="compromised" string="Execute" />
            	        -->
                    	<field name="state" widget="statusbar" statusbar_visible="draft,reserved,compromised,executed"/>
            		</header>
            		<sheet>
            			<h1>
            				<label string=" Budget Moves"/>	
            			</h1>
            			<group>
            				<group>
	            				<field name="code" readonly="True"/>
	            				<field name="origin" readonly="True"/>
	            				<field name="type" required="True" readonly="True"/>
	            				<field name="previous_move_id"/>
	            				<!--<field name="purchase_order_ids" attrs="{ 'invisible':[('purchase_order_ids','=',False)] }" widget="one2one_list" class="oe_inline"/>
	            				<field name="sale_order_ids" attrs="{ 'invisible':[('sale_order_ids','=', False)] } " widget="one2one_list" class="oe_inline"/>-->	
	          			  	</group>
							<group>
	            				<field name="date" readonly="True"/>
	            				<field name="standalone_move" readonly="True"/>
	            				<field name="fixed_amount" readonly="True" />
            				</group>
							<group>
								<field name="reserved"/>
								<field name="reversed"/>
								<field name="compromised"/>
	            				<field name="executed"/>
							</group>
            			</group>
            			<notebook>
