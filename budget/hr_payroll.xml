<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_salary_rule_form_inherit" model="ir.ui.view">
            <field name="name">hr.salary.rule.form.inherit</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/notebook/page[@string='General']" position="after" version="7.0">
                        <page string="Budget Program Lines">
                            <separator colspan="4" string="Budget Program Lines"/>
                            <field name="budget_program_lines" widget="selection" required="1"/>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
