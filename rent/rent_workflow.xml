<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record id = "wkf" model = "workflow">
			<field name = "name">rent.rent.basic</field>
			<field name = "osv">rent.rent</field>
			<field name = "on_create">True</field>
		</record>
		
		<record id = "act_draft" model = "workflow.activity">
			<field name = "wkf_id" ref = "wkf"/>
			<field name = "flow_start">True</field>
			<field name = "name">draft</field>
		</record>
		
		<record id = "act_valid" model = "workflow.activity">
			<field name = "wkf_id" ref = "wkf"/>
			<field name = "action">write({'state':'valid'})</field>
			<field name = "name">valid</field>
			<field name ="kind">function</field>
		</record>
		
		<record id="act_invoice" model="workflow.activity">
			<field name="wkf_id" ref="wkf"/>
			<field name="name">invoice</field>
			<field name="kind">subflow</field>
			<field name="subflow_id" search="[('osv','=','account.invoice')]" type="int"/>
			<field name="action">action_invoice_create()</field>
		</record>
		
		<record id = "act_finish" model = "workflow.activity">
			<field name = "wkf_id" ref = "wkf"/>
			<field name = "action">write({'state':'finished'})</field>
			<field name = "name">finished</field>
			<field name = "kind">function</field>
		</record>
		
				
		<record id = "draft_to_valid" model = "workflow.transition">
			<field name = "act_from" ref= "act_draft"/>
			<field name = "act_to" ref= "act_valid"/>
			<field name = "signal">rent_valid</field>
		</record>
		
		<record id="valid_to_invoicing" model="workflow.transition">
			<field name="act_from" ref="act_valid"/>
			<field name="act_to" ref="act_invoice"/>
			<field name="condition">state=='valid'</field>
		</record>
		
		<record id = "valid_to_cancel" model = "workflow.transition">
			<field name = "act_from" ref = "act_invoice"/>
			<field name = "act_to" ref = "act_finish"/>
			<field name="flow_stop">True</field>
			<field name = "signal">rent_finish</field>
		</record>
		
    </data>
</openerp>
