<?xml version = "1.0" encoding = "UTF-8"?>
<openerp>
	<data>
		<!--
		======================================
		CLIENTS
		======================================
		-->
		<record model = "ir.ui.view" id = "client_form_view">
			<field name = "name">rent.client.form</field>
			<field name = "model">rent.client</field>
			<field name = "type">form</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<data>
					<field name = "name" position = "after">
						<field name = "client_birthdate"/>
					</field>
					<field name = "city" position = "replace"/>
					<field name = "state_id" position = "replace">
						<field name = "province" on_change =  "determine_canton(province)"/>
					</field>
					<field name = "province" position = "after" widget = "selection">
						<field name = "canton" on_change ="determine_district(canton)"/>
					</field>
					<field name = "canton" position = "after">
						<field name = "district"/>
					</field>
				</data>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "client_tree_view">
			<field name = "name">rent.client.tree</field>
			<field name = "model">rent.client</field>
			<field name = "type">tree</field>
			<field name="inherit_id" ref="base.view_partner_tree"/>
			<field name = "arch" type = "xml">
				<data>
					<field name = "ref" position = "replace"/>
					<field name = "user_id" position = "replace"/>
					<field name = "country" position = "after">
						<field name = "client_birthdate"/>
					</field>
				</data>
			</field>
		</record>
		
		
		<record model = "ir.actions.act_window" id = "action_client_form_view">
			<field name = "name">Detalles de Clientes</field>
			<field name = "res_model">rent.client</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
			<field name = "view_id" ref = "client_form_view"/>
		</record>
		
		<record model = "ir.actions.act_window.view" id = "action_client_tree_view">
			<field name = "view_mode">tree</field>
			<field name = "view_id" ref = "client_tree_view"/>
			<field name="act_window_id" ref="action_client_form_view"/>
		</record>
		
		
		<!--
		======================================
						CLIENT MENU
		======================================
		-->
		<menuitem id = "rent_manager" name = "Rent" web_icon="data/rent.png"
                  web_icon_hover="data/rent-hover.png"/>
		<menuitem id = "rent_client_menu" name = "Clients" parent = "rent_manager"/>
		<menuitem id = "rent_client_submenu" name = "Client" parent = "rent_client_menu" action = "action_client_form_view"/>
		
		<!--
		======================================
						LOCATION
		======================================
		-->
		<record model = "ir.ui.view" id = "location_form_view">
			<field name = "name">res.partner.address</field>
			<field name = "model">res.partner.address</field>
			<field name = "type">form</field>
			<field name = "inherit_id" ref="base.view_partner_address_form2"/>
			<field name = "arch" type = "xml">
				<data>
					<field name="city" position = "replace">
						<field name = "anton" on_change = "determine_district(state_canton)"/>
					</field>
					<field name="state_id" position = "replace">
						<field name = "province" on_change = "determine_canton(state_province)"/>
					</field>
					<field name="canton" position = "after">
						<field name = "district"/>
					</field>
				</data>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "location_tree_view">
			<field name = "name">res.partner.address.tree</field>
			<field name = "model">res.partner.address</field>
			<field name = "type">tree</field>
			<field name = "inherit_id" ref="base.view_partner_address_tree"/>
			<field name = "arch" type = "xml">
				<data>
					<field name="city" position = "replace">
						<field name = "canton" on_change = "determine_district(state_canton)"/>
					</field>
					<field name="state_id" position = "replace">
						<field name = "province" on_change = "determine_canton(state_province)"/>
					</field>
					<field name="canton" position = "after">
						<field name = "district"/>
					</field>
				</data>
			</field>
		</record>
		
		
		<!--
		======================================
						STATES
		======================================
		-->
		<record model = "ir.ui.view" id = "state_form_view">
			<field name = "name">rent.state.form</field>
			<field name = "model">rent.state</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "State Detail">
					<group col = "2" colspan = "2">
						<separator string = "General Information" col = "4" colspan = "4"/>
						<field name = "state_number"/>
						<field name = "state_value"/>
						<field name = "state_area"/>
					</group>
					<notebook colspan = "4">
						<page string = "Location">
							<field name = "state_location" colspan="4" mode="form" nolabel="1" select="1" height="260">
								<form string="Postal Address">
                                      <group colspan="2" col="4">
                                        <separator string="Postal Address" colspan="4" col="4" />
                                        <field name="type" string="Type" colspan="2"/>
                                        <field name="street" colspan="4"/>
                                        <field name="street2" colspan="4"/>
                                        <field name="zip"/>                                        
                                        <field name="country_id" completion="1"/>
                                        <field name="province"/>
                                        <field name="canton"/>
                                        <field name="district"/>
                                     </group>
                                </form>
							</field>
						<!--<field name = "state_address"/>-->
						<!--<field name = "state_canton" on_change = "determine_district(state_canton)"/>
						<field name = "state_district"/>-->
						</page>
						<page string = "Buildings">
							<field name = "state_buildings" nolabel="1"/>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "state_tree_view">
			<field name = "name">rent.state.tree</field>
			<field name = "model">rent.state</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string = "State Detail">
					<field name = "state_number"/>
					<field name = "state_area"/>
					<field name = "state_value"/>
					<!--<field name = "state_province"/>
					<field name = "state_canton"/>
					<field name = "state_district"/>-->
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_state_form_view">
			<field name = "name">State Detail</field>
			<field name = "res_model">rent.state</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
			<field name = "view_id" ref="state_form_view"></field>
			<field name="help">Manage the estates that your company owns, to have them available in your system</field>
		</record>
		
		<!--ESTATE MENU-->
		<menuitem id = "state_menu" name = "Real Estate" parent = "rent_manager"/>
		<menuitem id = "state_submenu" name = "Estate" parent = "state_menu" action = "action_state_form_view"/>
		
		
		<record model ="ir.ui.view" id = "building_form_view">
			<field name = "name">rent.building.form</field>
			<field name = "model">rent.building</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Building Details">
					<group col = "4" colspan = "4">
						<separator string = "General Information" col = "4" colspan = "4"/>
						<field name = "name"/>
						<field name = "building_date_construction"/>
						<field name = "building_area"/>
						<field name = "building_value"/>
						<field name = "building_capacity"/>
					</group>
					<group col = "4" colspan = "4">
						<separator string = "Location" col = "4" colspan = "4"/>
						<field name = "building_elevator"/>
						<field name = "building_elevators_number" attrs="{'readonly':[('building_elevator','=','False')]}"/>
						<field name = "building_stairs"/>
						<field name = "building_stairs_number" attrs="{'readonly':[('building_stairs','=','False')]}"/>
					</group>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "building_tree_view">
			<field name = "name">rent.building.tree</field>
			<field name = "model">rent.building</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string="Building Details">
					<field name="name"/>
					<field name="building_date_construction"/>
					<field name="building_value"/>
					<field name="building_area"/>
					<field name="building_capacity"/>
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_building_form_view">
			<field name = "name">Building Detail</field>
			<field name = "res_model">rent.building</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
		</record>
		
		<!--BUILDING MENU-->
		<menuitem id = "building_submenu" name = "Building" parent = "state_menu" action = "action_building_form_view"/>
		
		
		<!--FLOOR-->
		
		<record model ="ir.ui.view" id = "floor_form_view">
			<field name = "name">rent.floor.form</field>
			<field name = "model">rent.floor</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Floor Details">
					<group col = "4" colspan = "4">
						<separator string = "General Information" col = "4" colspan = "4"/>
						<field name = "floor_number"/>
					</group>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "floor_tree_view">
			<field name = "name">rent.floor.tree</field>
			<field name = "model">rent.floor</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string="Floor Details">
					<field name="floor_number"/>
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_floor_form_view">
			<field name = "name">Floor Detail</field>
			<field name = "res_model">rent.floor</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
		</record>
		
		<menuitem id = "floor_submenu" name = "Floors" parent = "state_menu" action = "action_floor_form_view"/>
	</data>
</openerp>
