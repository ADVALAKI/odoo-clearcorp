<?xml version = "1.0" encoding = "UTF-8"?>
<openerp>
	<data>
		<record model = "ir.ui.view" id = "client_form_view">
			<field name = "name">rent.client.form</field>
			<field name = "model">rent.client</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Detalle de cliente">
					<field name = "client_id"/>
					<field name = "name"/>
					<field name = "client_lastname"/>
					<field name = "client_lastname2"/>
					<field name = "client_province"/>
					<field name = "email"/>
					<field name = "comment"/>
					<field name = "phone"/>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "client_tree_view">
			<field name = "name">rent.client.tree</field>
			<field name = "model">rent.client</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string = "Detalle de cliente">
					<field name = "client_id"/>
					<field name = "name"/>
					<field name = "client_lastname"/>
					<field name = "client_lastname2"/>
					<field name = "client_province"/>
					<field name = "email"/>
					<field name = "phone"/>
				</tree>
			</field>
		</record>
		
		
		<record model = "ir.actions.act_window" id = "action_client_form_view">
			<field name = "name">rent.client</field>
			<field name = "res_model">rent.client</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">tree</field>
			<field name = "view_mode">tree,form</field>
		</record>
		
		<menuitem id = "rent_manager" name = "Rent"/>
		<menuitem id = "rent_client_menu" name = "Clients" parent = "rent_client_manager"/>
		<menuitem id = "rent_client_submenu" name = "Client" parent = "rent_client_menu" action = "action_client_form_view"/>
	</data>
</openerp>
