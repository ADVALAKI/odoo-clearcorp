			<field name = "model">rent.rent</field>
			<field name = "type">search</field>
			<field name = "arch" type = "xml">
				<search string = "Search Rents">
					<group>
						<filter string = "Draft" icon = "terp-stock_symbol-selection" domain = "[('state','=','draft')]"/>
						<filter string = "Valid" icon = "terp-go-home" domain = "[('state','=','valid')]" />
						<filter string = "Finished" icon = "terp-go-home" domain = "[('state','=','finished')]"/>
					</group>
					<group expand = "0" string = "Group By...">
						<filter string = "Client" icon = "terp-personal" domain = "[]" context="{'group_by' : 'rent_rent_client'}"/>
						<filter string = "Type" icon = "terp-stock_symbol-selection" domain = "[]" context="{'group_by' : 'rent_type'}"/>
						<filter string = "Years" icon = "terp-go-home" domain = "[]" context="{'group_by' : 'rent_years'}"/>
						<filter string = "Status" icon = "terp-go-home" domain = "[]" context="{'group_by' : 'state'}"/>
					</group>
				</search>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "rent_form_view">
			<field name = "name">rent.rent.form</field>
			<field name = "model">rent.rent</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Rent Detail">
					<group col = "4" colspan = "2">
						<separator string = "Information" colspan = "4"/>
						<field name = "name"/>
						<field name = "rent_rent_client"/>
						<field name = "rent_type" attrs = "{'readonly' : [('state','!=','draft')]}"/>
						<field name = "state"/>
						<field name = "rent_total"/>
						<field name = "rent_rise"/>
					</group>
					<group col = "2" colspan = "2">
						<separator string = "Real Estate Related" colspan = "4"/>
						<field name = "rent_is_local" attrs="{'readonly' : ['|',('rent_is_parking','=','True'),('rent_is_estate','=','True')], 'required' : [('rent_is_parking','!=','True'),('rent_is_estate','!=','True')]}"/>
						<field name = "rent_is_parking" attrs = "{'readonly' : ['|',('rent_is_estate','=','True'),('rent_is_local','=','True')], 'required' : [('rent_is_estate','!=','True'),('rent_is_local','!=','True')]}"/>
						<field name = "rent_is_estate" attrs = "{'readonly' : ['|',('rent_is_local','=','True'),('rent_is_parking','=','True')], 'required' : [('rent_is_local','!=','True'),('rent_is_parking','!=','True')]}"/>
					</group>
					<group col = "4" colspan = "4">
						<separator string = "Length of Contract" colspan = "4"/>
						<field name = "rent_start_date"/>
						<field name = "rent_end_date"/>
						<field name = "rent_years"/>
					</group>
					<group col = "4" colspan = "4" attrs = "{'invisible':[('state','!=','Finished')]}">
						<separator string = "Contract Termination" colspan = "4"/>
						<field name = "rent_ending_motif"/>
						<field name = "rent_ending_motif_desc"/>
					</group>
					<notebook>
						<page string = "Detail">
							<group col = "4" colspan = "4" attrs = "{'invisible':[('rent_is_parking','!=','True'),('rent_is_estate','!=','True'),('rent_is_local','!=','True')]}">
								<separator string = "Real Estate Information" colspan = "4"/>
									<field name = "rent_rent_local" attrs = "{'readonly' : [('rent_is_local','!=','True')], 'required' : [('rent_is_local','=','True')], 'invisible': [('rent_is_local','!=','True')]}"/>
									<field name = "rent_rent_parking" attrs = "{'readonly' : [('rent_is_parking','!=','True')], 'required' : [('rent_is_parking','=','True')], 'invisible': [('rent_is_parking','!=','True')]}"/>
									<field name = "rent_rent_estate" attrs = "{'readonly' : [('rent_is_estate','!=','True')], 'required' : [('rent_is_estate','=','True')], 'invisible': [('rent_is_estate','!=','True')]}"/>

							</group>
							 <group col="6" colspan="4">
									<button name="rent_cancel" states="draft,valid" string="Cancel" icon="gtk-cancel"/>
									<button name="rent_valid" states="draft" string="Approve" icon="terp-camera_test"/>
							</group>
						</page>
						<page string = "Results">
							
						</page>
						<page string = "Modifications">
							<field name = "rent_modif" attrs="{'readonly' : [('rent_type','=','Contract')]}"/>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		
