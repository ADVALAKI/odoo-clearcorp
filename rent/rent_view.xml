<?xml version = "1.0" encoding = "UTF-8"?>
<openerp>
	<data>
		<!--
		======================================
		CLIENTS
		======================================
		-->
		<record model = "ir.ui.view" id = "client_form_view">
			<field name = "name">rent.client.form</field>
			<field name = "model">rent.client</field>
			<field name = "type">form</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<data>
					<field name = "name" position = "after">
						<field name = "client_birthdate"/>
					</field>
					<field name = "city" position = "replace"/>
					<field name = "state_id" position = "replace">
						<field name = "province" on_change =  "determine_canton(province)"/>
					</field>
					<field name = "province" position = "after" widget = "selection">
						<field name = "canton" on_change ="determine_district(canton)"/>
					</field>
					<field name = "canton" position = "after">
						<field name = "district"/>
					</field>
					<page name = "Sales &amp; Purchases" position = "replace"/>
				</data>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "client_tree_view">
			<field name = "name">rent.client.tree</field>
			<field name = "model">rent.client</field>
			<field name = "type">tree</field>
			<field name="inherit_id" ref="base.view_partner_tree"/>
			<field name = "arch" type = "xml">
				<data>
					<field name = "ref" position = "replace"/>
					<field name = "user_id" position = "replace"/>
					<field name = "country" position = "after">
						<field name = "client_birthdate"/>
					</field>
				</data>
			</field>
		</record>
		
		
		<record model = "ir.actions.act_window" id = "action_client_form_view">
			<field name = "name">Detalles de Clientes</field>
			<field name = "res_model">rent.client</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
			<field name = "view_id" ref = "client_form_view"/>
		</record>
		
		<record model = "ir.actions.act_window.view" id = "action_client_tree_view">
			<field name = "view_mode">tree</field>
			<field name = "view_id" ref = "client_tree_view"/>
			<field name="act_window_id" ref="action_client_form_view"/>
		</record>
		
		
		<!--
		======================================
						CLIENT MENU
		======================================
		-->
		<menuitem id = "rent_manager" name = "Rent" web_icon="data/rent.png"
                  web_icon_hover="data/rent-hover.png"/>
		<menuitem id = "rent_client_menu" name = "Clients" parent = "rent_manager"/>
		<menuitem id = "rent_client_submenu" name = "Client" parent = "rent_client_menu" action = "action_client_form_view"/>
		
		<!--
		======================================
						LOCATION
		======================================
		-->
		<record model = "ir.ui.view" id = "location_form_view">
			<field name = "name">res.partner.address</field>
			<field name = "model">res.partner.address</field>
			<field name = "type">form</field>
			<field name = "inherit_id" ref="base.view_partner_address_form2"/>
			<field name = "arch" type = "xml">
				<data>
					<field name="city" position = "replace">
						<field name = "canton" on_change = "determine_district(state_canton)"/>
					</field>
					<field name="state_id" position = "replace">
						<field name = "province" on_change = "determine_canton(state_province)"/>
					</field>
					<field name="canton" position = "after">
						<field name = "district"/>
					</field>
				</data>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "location_tree_view">
			<field name = "name">res.partner.address.tree</field>
			<field name = "model">res.partner.address</field>
			<field name = "type">tree</field>
			<field name = "inherit_id" ref="base.view_partner_address_tree"/>
			<field name = "arch" type = "xml">
				<data>
					<field name="city" position = "replace">
						<field name = "canton" on_change = "determine_district(state_canton)"/>
					</field>
					<field name="state_id" position = "replace">
						<field name = "province" on_change = "determine_canton(state_province)"/>
					</field>
					<field name="canton" position = "after">
						<field name = "district"/>
					</field>
				</data>
			</field>
		</record>
		
		
		<!--
		======================================
						STATES
		======================================
		-->
		<record model = "ir.ui.view" id = "state_form_view">
			<field name = "name">rent.state.form</field>
			<field name = "model">rent.state</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "State Detail">
					<group col = "2" colspan = "2">
						<separator string = "General Information" col = "4" colspan = "4"/>
						<field name = "state_number" select = "1"/>
						<field name = "state_value"/>
						<field name = "state_area"/>
					</group>
					<notebook colspan = "4">
						<page string = "Location">
							<field name = "state_location" colspan="4" mode="form" nolabel="1" select="1" height="260">
								<form string="Postal Address">
                                      <group colspan="2" col="4">
                                        <separator string="Postal Address" colspan="4" col="4" />
                                        <field name="type" string="Type" colspan="2"/>
                                        <field name="street" colspan="4"/>
                                        <field name="street2" colspan="4"/>
                                        <field name="zip"/>                                        
                                        <field name="country_id" completion="1"/>
                                        <field name="province" select = "1"/>
                                        <field name="canton" select = "1"/>
                                        <field name="district" select = "1"/>
                                     </group>
                                </form>
							</field>
						<!--<field name = "state_address"/>-->
						<!--<field name = "state_canton" on_change = "determine_district(state_canton)"/>
						<field name = "state_district"/>-->
						</page>
						<page string = "Buildings">
							<field name = "state_buildings" nolabel="1"/>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "state_tree_view">
			<field name = "name">rent.state.tree</field>
			<field name = "model">rent.state</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string = "State Detail">
					<field name = "state_number"/>
					<field name = "state_area"/>
					<field name = "state_value"/>
					<!--<field name = "state_province"/>
					<field name = "state_canton"/>
					<field name = "state_district"/>-->
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_state_form_view">
			<field name = "name">State Detail</field>
			<field name = "res_model">rent.state</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
			<field name = "view_id" ref="state_form_view"></field>
			<field name="help">Manage the estates that your company owns, to have them available in your system</field>
		</record>
		
		<!--
		======================================
						ESTATE MENU
		======================================
		-->
		<menuitem id = "rent_state_menu" name = "Real Estate" parent = "rent_manager"/>
		<menuitem id = "rent_state_submenu" name = "Estate" parent = "rent_state_menu" action = "action_state_form_view"/>
		
		
		<!--
		======================================
						BUILDING
		======================================
		-->
		
		<record model ="ir.ui.view" id = "building_form_view">
			<field name = "name">rent.building.form</field>
			<field name = "model">rent.building</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Building Details">
					<group col = "4" colspan = "2">
						<separator string = "General Information" col = "4" colspan = "4"/>
						<field name = "name" select = "1"/>
						<field name = "building_date_construction" select = "1"/>
						<field name = "building_area"/>
						<field name = "building_value"/>
						<field name = "building_capacity"/>
					</group>
					<group col = "4" colspan = "2">
						<separator string = "Photos" col = "4" colspan = "4"/>
						<field name = "building_photo" widget = "image" nolabel="1" img_width="200" img_height="180" />
					</group>
					<group col = "4" colspan = "4">
						<separator string = "Machinery" col = "4" colspan = "4"/>
						<field name = "building_elevator"/>
						<field name = "building_elevators_number" attrs="{'readonly':[('building_elevator','=','False')]}"/>
						<field name = "building_stairs"/>
						<field name = "building_stairs_number" attrs="{'readonly':[('building_stairs','=','False')]}"/>
					</group>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "building_tree_view">
			<field name = "name">rent.building.tree</field>
			<field name = "model">rent.building</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string="Building Details">
					<field name="name"/>
					<field name="building_date_construction"/>
					<field name="building_value"/>
					<field name="building_area"/>
					<field name="building_capacity"/>
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_building_form_view">
			<field name = "name">Building Detail</field>
			<field name = "res_model">rent.building</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
		</record>
		
		
		<!--
		======================================
						BUILDING MENU
		======================================
		-->
		<menuitem id = "rent_building_submenu" name = "Building" parent = "rent_state_menu" action = "action_building_form_view"/>
		
		<!--
		======================================
					FLOOR MENU
		======================================
		-->
		<record model ="ir.ui.view" id = "floor_form_view">
			<field name = "name">rent.floor.form</field>
			<field name = "model">rent.floor</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Floor Details">
					<group col = "4" colspan = "2">
						<separator string = "General Information" col = "4" colspan = "4"/>
						<field name = "floor_number"/>
						<field name = "floor_area"/>
						<field name = "floor_value"/>
					</group>
					<group col = "4" colspan = "2">
						<separator string = "Design Information" col = "4" colspan = "4"/>
						<field name = "floor_thickness"/>
						<field name = "floor_durability"/>
						<field name = "floor_acabado"/>
					</group>
					<notebook colspan = "4">
						<page string = "Local">
							<field name = "floor_local"/>
						</page>
						<page string = "Parking">
							<field name = "floor_parking"/>
						</page>
					</notebook>
				</form>
			</field>
		</record>

		<record model = "ir.ui.view" id = "floor_tree_view">
			<field name = "name">rent.floor.tree</field>
			<field name = "model">rent.floor</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string="Floor Details">
					<field name="floor_number"/>
					<field name="floor_value"/>
					<field name="floor_area"/>
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_floor_form_view">
			<field name = "name">Floor Detail</field>
			<field name = "res_model">rent.floor</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
		</record>
		
		<!--
		======================================
					FLOOR MENU
		======================================
		-->
		<menuitem id = "rent_floor_submenu" name = "Floors" parent = "rent_state_menu" action = "action_floor_form_view"/>
		
		
		<!--
		======================================
					LOCAL
		======================================
		-->
		
		<record model = "ir.ui.view" id = "local_form_view">
			<field name = "name">rent.floor.local.form</field>
			<field name = "model">rent.floor.local</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Local Details">
					<group col = "4" colspan = "2">
						<separator string = "General Information"/>
						<field name = "local_number"/>
						<field name = "local_value"/>
						<field name = "local_area"/>
						<field name = "local_huella"/>
					</group>
					<group col = "4" colspan = "2">
						<separator string = "Miscelanius Information"/>
						<field name = "local_sqrmeter_price"/>
						<field name = "local_rented"/>
						<field name = "local_water_meter_number"/>
						<field name = "local_light_meter_number"/>
					</group>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "local_tree_view">
			<field name = "name">rent.floor.local.tree</field>
			<field name = "model">rent.floor.local</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string = "Local List">
					<field name = "local_number"/>
					<field name = "local_value"/>
					<field name = "local_area"/>
					<field name = "local_rented"/>
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_local_form_view">
			<field name = "name">Local Detail</field>
			<field name = "res_model">rent.floor.local</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
		</record>
		
		<!--
		======================================
					PARKING
		======================================
		-->
		
		<record model = "ir.ui.view" id = "parking_form_view">
			<field name = "name">rent.floor.parking.form</field>
			<field name = "model">rent.floor.parking</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Parking Details">
					<group col = "6" colspan = "6">
						<separator string = "General Information"/>
						<field name = "parking_number"/>
						<field name = "parking_value"/>
						<field name = "parking_area"/>
						<field name = "parking_huella"/>
						<field name = "parking_sqrmeter_price"/>
						<field name = "parking_rented"/>
					</group>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "parking_tree_view">
			<field name = "name">rent.floor.parking.tree</field>
			<field name = "model">rent.floor.parking</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string = "Local List">
					<field name = "parking_number"/>
					<field name = "parking_value"/>
					<field name = "parking_area"/>
					<field name = "parking_rented"/>
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_parking_form_view">
			<field name = "name">Parking Detail</field>
			<field name = "res_model">rent.floor.parking</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
		</record>
		
		<!--
		======================================
					RENT
		======================================
		-->
		<record model = "ir.ui.view" id = "rent_form_view">
			<field name = "name">rent.rent.form</field>
			<field name = "model">rent.rent</field>
			<field name = "type">form</field>
			<field name = "arch" type = "xml">
				<form string = "Rent Detail">
					<group col = "4" colspan = "4">
						<separator string = "Information" colspan = "4"/>
						<field name = "name"/>
						<field name = "rent_type"/>
						<field name = "rent_status"/>
						<field name = "rent_value"/>
						<field name = "rent_rise"/>
					</group>
					<group col = "4" colspan = "4">
						<separator string = "Length of Contract" colspan = "4"/>
						<field name = "rent_start_date"/>
						<field name = "rent_end_date"/>
					</group>
					<group col = "4" colspan = "4">
						<separator string = "Contract Termination" colspan = "4"/>
							<field name = "rent_ending_motif"/>
							<field name = "rent_ending_desc"/>
					</group>
				</form>
			</field>
		</record>
		
		<record model = "ir.ui.view" id = "rent_tree_view">
			<field name = "name">rent.rent.tree</field>
			<field name = "model">rent.rent</field>
			<field name = "type">tree</field>
			<field name = "arch" type = "xml">
				<tree string = "Rent List">
					<field name = "name"/>
					<field name = "rent_type"/>
					<field name = "rent_status"/>
					<field name = "rent_start_date"/>
					<field name = "rent_end_date"/>
				</tree>
			</field>
		</record>
		
		<record model = "ir.actions.act_window" id = "action_rent_form_view">
			<field name = "name">Rent Details</field>
			<field name = "res_model">rent.rent</field>
			<field name = "type">ir.actions.act_window</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
			<field name = "view_id" ref = "rent_tree_view"/>
		</record>
		
		<!--
		======================================
					RENT MENU
		======================================
		-->
		<menuitem id = "rent_rent_menu" name = "Rent" parent = "rent_manager"/>
		<menuitem id = "rent_rent_submenu" name = "Rents" parent = "rent_rent_menu" action = "action_rent_form_view"/>
	</data>
</openerp>
