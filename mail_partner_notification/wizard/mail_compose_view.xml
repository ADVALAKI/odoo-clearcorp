<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="mail_compose_form">
            <field name="name">Mail Compose Form</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group/div[2]/span[2]" position="replace">
                </xpath>
                <xpath expr="//form/group/label[@for='partner_ids']" position="before">
                    <field name="followers_ids" widget="many2many_tags_email" 
                        placeholder="Followers" context="{'force_email':True, 'show_email':True}"
                        attrs="{'invisible': [('notify', '=', False)]}"/>
                </xpath>
                <xpath expr="//form/group/field[@name='notify']" position="attributes">
                    <attribute name="attrs">{'invisible':False}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>