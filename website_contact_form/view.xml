<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<template id="contact_snippet"
	          name="Contact Snippet"
	          inherit_id="website.snippets">
	<xpath expr="//div[@id='snippet_feature']" position="inside">
	<div>
		<div class="oe_snippet_thumbnail">
            <img class="oe_snippet_thumbnail_img" src="website_contact_form/static/src/img/contact_form.png"/>
            <span class="oe_snippet_thumbnail_title">Contact Form</span>
        </div>
	    <section class="oe_snippet_body">
            <div id="contactus_form" class="container" >
            <div class="row">
            <form action="/website_contact_form/contact" method="post"  class="form-inline" enctype="multipart/form-data" role="form">
                <div class="form-group">
                      <input type="text"  class="form-control" name="contact_name" required="True" placeholder="Nombre ó Empresa" />
                      <input type="text"  class="form-control" name="phone"   placeholder="Teléfono" />
                      <input type="email" class="form-control" name="email_from" placeholder="Correo Electrónico"/>
                      <button class="btn btn-primary btn-lg">Enviar</button>
                </div>
            </form>
        </div>
        </div>
        </section>
        <style>
        #contactus_form{
            text-align:center;
        }
    </style>
        </div>
	</xpath>
	</template>

    

</data>
</openerp>