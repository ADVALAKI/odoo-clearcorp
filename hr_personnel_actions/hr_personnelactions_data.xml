<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="1">
        <!-- Default Action Types -->
        <record id="personnel_action_contract" model="hr.personnelactions.actiontype">
            <field name="type">Contract</field>
        </record>
        
        <record id="personnel_action_payroll" model="hr.personnelactions.actiontype">
            <field name="type">Payroll</field>
        </record>
        
        <record id="personnel_config_contract_creation" model="hr.personnelactions.config">
            <field name="key">contract_creation</field>
            <field name="action_type_id" eval="ref('personnel_action_contract')"/>
        </record>
        
        <record id="personnel_config_contract_modification" model="hr.personnelactions.config">
            <field name="key">contract_modification</field>
            <field name="action_type_id" eval="ref('personnel_action_contract')"/>
        </record>
        
        <record id="personnel_config_payroll" model="hr.personnelactions.config">
            <field name="key">payroll_changes</field>
            <field name="action_type_id" eval="ref('personnel_action_payroll')"/>
        </record>
    </data>
</openerp>