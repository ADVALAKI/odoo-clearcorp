<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_label">
            <link href="/product_label/static/src/css/product_label.css" rel="stylesheet"/>
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <!-- Multicompany -->
                    <t t-if="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id"></t>
                    </t>
                    <t t-if="not o or not 'company_id' in o">
                        <t t-set="company" t-value="res_company"></t>
                    </t>
                    <div class="page">
                        <t t-foreach="docs" t-as="o">
                            <div class="label">
                                <table class="table-inline table-label">
                                    <thead>
                                        <tr>
                                            <th class="name" colspan="2" ><!--style="background-color: #FFFF00"-->
                                                <span t-field="o.name"/>
                                            </th>
                                            <th class="info-right">
                                                <span t-field="o.label_packaging"/>
                                                <span t-field="o.label_uom_id"/>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td colspan="3" class="price">
                                                <span t-field="o.label_price"
                                                    t-field-options='{"widget": "monetary", "display_currency": "company.currency_id"}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="info barcode" colspan="3">
                                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', o.barcode, 160, 15)" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="info">
                                                <span t-field="o.default_code"/>
                                            </td>
                                            <td class="info barcode">
                                                <span t-field="o.barcode"/>
                                            </td>
                                            <td class="info info-right">
                                                <span t-field="o.label_price_per_uom" /> x <span t-field="o.label_uom_id"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>