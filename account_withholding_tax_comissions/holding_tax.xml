<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Views -->
        <!-- account.withholding.tax -->
        <!-- tree -->
        <record id="view_holding_tax_tree" model="ir.ui.view">
            <field name="name">view.holding.tax.tree</field>
            <field name="model">account.withholding.tax</field>
            <field name="arch" type="xml">
                <tree string="Holding Taxes">
                    <field name="code" />
                    <field name="name" />
                    <field name="type" />
                    <field name="amount" />
                </tree>
            </field>
        </record>
        <!-- form -->
        <record id="view_holding_tax_form" model="ir.ui.view">
            <field name="name">view.holding.tax.form</field>
            <field name="model">account.withholding.tax</field>
            <field name="arch" type="xml">
                <form string="Holding Taxes" version="7.0">
                    <sheet>
                        <group col="4" string="General">
                            <field name="name" required="True" />
                            <field name="code" required="True" />
                            <field name="journal_id" required="True" />
                        </group>
                        <group col="4" string="Values">
                            <field name="type" required="True" />
                            <div>
                                <label string="Value" for="amount" />
                                <field name="amount" required="True"
                                    class="oe_inline" />
                                <label string="%%" for="amount"
                                    attrs="{'invisible': [('type', '!=', 'percentage')]}" />
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_holding_tax_search" model="ir.ui.view">
            <field name="name">view.holding.tax.search</field>
            <field name="model">account.withholding.tax</field>
            <field name="arch" type="xml">
                <search string="Search Withholding Tax">
                    <field name="name" filter_domain="[('name','ilike',self)]"
                        string="Name" />
                    <field name="code" filter_domain="['('code','ilike',self)]"
                        string="Code" />
                    <group expand="0" string="Group By...">
                        <filter string="Tipo" icon="terp-folder-orange"
                            domain="[]" context="{'group_by':'type'}" />
                    </group>
                </search>
            </field>
        </record>
        <!-- Actions -->
        <record id="action_holding_tax" model="ir.actions.act_window">
            <field name="name">Holding Taxes</field>
            <field name="res_model">account.withholding.tax</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="view_id" ref="view_account_withholding_tax_tree" 
                /> -->
            <field name="search_view_id" ref="view_holding_tax_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to record a new holding tax
                </p>
            </field>
        </record>
        <!-- Menu Items -->
        <menuitem id="menu_holding_tax" action="action_holding_tax"
            sequence="50" parent="account.menu_configuration_misc" />
    </data>
</openerp>