<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_workcenter_station_active">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page">
                            <h2>Active Work Orders</h2>
                            <h4>[<span t-field="o.code"/>] - <span t-field="o.name"/></h4>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Manufacturing Order</th>
                                        <th>Product</th>
                                        <th class="text-right">Qty</th>
                                        <th>Work Order</th>
                                        <th>Work Center</th>
                                        <th>Number of Cycles</th>
                                        <th>Number of Hours</th>
                                        <th class="text-right">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.active_order_ids" t-as="wo">
                                        <td><span t-field="wo.production_id"/></td>
                                        <td><span t-field="wo.product"/></td>
                                        <td>
                                            <span t-field="wo.qty"/>
                                            <span t-field="wo.uom"/>
                                        </td>
                                        <td><span t-field="wo.name"/></td>
                                        <td><span t-field="wo.workcenter_id"/></td>
                                        <td><span t-field="wo.cycle"/></td>
                                        <td><span t-field="wo.hour"/></td>
                                        <td><span t-field="wo.state"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
    </data>
</openerp>