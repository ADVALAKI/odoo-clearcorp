<?xml version = "1.0" encoding = "UTF-8"?>
<openerp>
	<data>

		<!--
		======================================
				res.partner address form
		======================================
		-->
		
		<record model="ir.ui.view" id="view_partner_address">
			<field name="name">res.partner.form.address.add</field>
			<field name="model">res.partner</field>
			<field name="model">form</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<data>
					<xpath expr="//field[@name='address']/form/field[@name='type']" position="after">
						<field name="name"/>
					</xpath>
					<xpath expr="//field[@name='address']/form/field[@name='type']" position="replace"/>
				</data>
			</field>
		</record>
	</data>
</openerp>

