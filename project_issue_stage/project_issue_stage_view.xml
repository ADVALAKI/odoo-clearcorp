<?xml version="1.0"?>
<openerp>
    <data>

        <record id="issue_type_form" model="ir.ui.view">
            <field name="name">project.issue.type.form</field>
            <field name="model">project.issue.type</field>
            <field name="arch" type="xml">
                <form string="Issue Stage">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="case_default"/>
                            <field name="fold"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Add a description..."/>
                </form>
            </field>
        </record>
        
        
        <record id="issue_type_tree" model="ir.ui.view">
            <field name="name">project.issue.type.tree</field>
            <field name="model">project.issue.type</field>
            <field name="view_type">tree</field>
            <field name="arch" type="xml">
                <tree string="Issue Stage">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="fold"/>
                </tree>
            </field>
        </record>
        
        <record id="open_issue_type_form" model="ir.actions.act_window">
            <field name="name">Issue Stages</field>
            <field name="res_model">project.issue.type</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="issue_type_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to add a stage in the issue pipeline.</p>
                <p>Define the steps that will be used in the project from the
                    creation of the issue, up to the closing of issue.
                    You will use these stages in order to track the progress in
                    solving a issue.</p>
            </field>
        </record>
        
