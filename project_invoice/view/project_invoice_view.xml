<?xml version="1.0" encoding="UTF-8"?>

<openerp>
<data>

        <!-- project.task -->
        <!-- form -->
        <record id="view_task_form3_inherid" model="ir.ui.view">
            <field name="name">view.task.form3</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="ccorp_project_oerp.view_task_form" />
            <field name="priority" eval="100" />
            <field name="arch" type="xml">
                <xpath expr="//form/header/field[@name='stage_id']" position="before">
                    <button name="split_task" type="object" string="Split task"
                        class="oe_highlight" />
                </xpath>
                <xpath expr="//form/sheet/h1/field[@name='name']/.." position="after">
                    <label for="invoiced" string="Invoiced" class="oe_inline" />
                    <field name="invoiced" class="oe_inline" />
                </xpath>
            </field>
        </record>

        <!-- Search -->
        <record id="view_task_search" model="ir.ui.view">
            <field name="name">Task Search</field>
            <field name="model">project.task</field>
            <field name="type">search</field>
            <field name="priority" eval="160" />
            <field name="inherit_id" ref="project.view_task_search_form" />
            <field name="arch" type="xml">
                <search string="Tasks">
                    <field name="kind_task_id" />
                    <separator />
                    <filter icon="Invoiced" name="filter_invoiced" string="For Invoiced"
                        domain="[('invoiced','=','tobeinvoice')]" />
                    <separator />
                    <filter icon="Invoiced" name="filter_done" string="Done"
                        domain="[('state','=','done')]" />
                    <separator />
                    <filter name="filter_project" string="Project" icon="Project" 
                        context="{'group_by':'project_id'}"/>
                </search>
            </field>
        </record>

        <!-- account.analytic.account -->
        <!-- Form -->
        <record id="analytic_analytic_account_form2" model="ir.ui.view">
            <field name="name">Invoice</field>
            <field name="model">account.analytic.account</field>
            <field name="priority" eval="160" />
            <field name="inherit_id"
                ref="account_analytic_analysis.account_analytic_account_form_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='invoice_on_timesheets']/group"
                    position="replace">
                    <br />
                    <br />
                    <form string="Invoice Configuration">
                        <div>
                            <label for="invoice_type_id" string="Invoice Type" class="oe_inline"
                                attrs="{'invisible': [('invoice_on_timesheets','=',False)]}" />
                            <field name="invoice_type_id" string="Invoice Type" class="oe_inline"
                                attrs="{'invisible': [('invoice_on_timesheets','=',False)], 'required': [('invoice_on_timesheets','=',True)]}">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="invoice"/>
                                    <field name="product_price"/>
                                    <field name="product_id"
                                           attrs="{'required': [('invoice','=',True)]}"/>
                                    <field name="price"
                                        attrs="{'required': [('invoice','=',True)], 'readonly': [('product_price','=',True)]}" />
                                   <field name="acc_analytic_qty_grp_id"/>
                                </tree>
                            </field>
                            <br/><br/>
                            <label for="ticket_invoice_type_id" string="Ticket Type" class="oe_inline" />
                            <field name="ticket_invoice_type_ids" string="Ticket Type" class="oe_inline">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="ticket_type"/>
                                    <field name="warranty"/>
                                </tree>
                            </field>
                        </div>
                    </form>
                </xpath>
            </field>
        </record>
        
        <record id="analytic_analytic_account_form3" model="ir.ui.view">
            <field name="name">Hours groups</field>
            <field name="model">account.analytic.account</field>
            <field name="priority" eval="160" />
            <field name="inherit_id"
                ref="analytic.view_account_analytic_account_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='contract_page']" position="after">
                    <page string="Hours Groups" name="hours_group">
                        <field name="acc_analytic_qty_grp_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="quatity"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
           </field>
       </record>
       
     <record id="account_analytic_account_invoice_form_inherit2" model="ir.ui.view">
            <field name="name">account.analytic.account.invoice.form.inherit2</field>
            <field name="model">account.analytic.account</field>
            <field name="priority" eval="40" />
            <field name="inherit_id"
                ref="account_analytic_analysis.account_analytic_account_form_form" />
            <field name="arch" type="xml">
                <xpath expr="//div/field[@name='recurring_invoice_line_ids']/tree/field[@name='price_subtotal']" 
                       position="after">
                            <field name="partner_id"/>
                            <field name="amount_po"/>
                </xpath>
           </field>
       </record>
       
        <record id="action_saleorder_wizard" model="ir.actions.act_window">
            <field name="name">Sale Order Wizard</field>
            <field name="res_model">sale.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_sale_order_wizard_form"/>
            <field name="target">new</field>
        </record>
        
        <record id="view_feature_extra_form" model="ir.ui.view">
            <field name="name">Feature</field>
            <field name="model">ccorp.project.scrum.feature</field>
            <field name="priority" eval="160" />
            <field name="inherit_id" ref="ccorp_project_scrum.view_feature_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/header"
                    position="replace">
                      <header>
                        <button name="set_open" type="object"
                            string="Open" class="oe_highlight"
                            states="draft,cancelled,done,quote_pending" />
                        <button name="set_done" type="object"
                            string="Done" class="oe_highlight" states="open" />
                        <button name="set_cancel" type="object"
                            string="Cancel" states="open,quote_pending" />
                        <button name="%(action_saleorder_wizard)d" type="action" string="Create Sale Order"/>
                        <field name="state" widget="statusbar"/>
                        </header>
                </xpath>
                <xpath expr="//form/sheet/group/group/field[@name='project_id']"
                    position="before">
                    <field name="invoiceable"/>
               </xpath>
            </field>
         </record>
         
          <record model="ir.ui.view" id="project_issue_form_view_invoice">
            <field name="name">Project Issue Tracker Form</field>
            <field name="model">project.issue</field>
            <field name="inherit_id" ref="project_issue.project_issue_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@string='Extra Info']" position="before">
                    <page string="Approvals" name="prepaycontracts">
                        <field name="group_approved">
                            <tree>
                                <field name="ticket_id"/>
                                <field name="user_id"/>
                                <field name="date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
            
                
       <record id="action_task_invoice" model="ir.actions.act_window">
            <field name="name">Task Charge</field>
            <field name="res_model">project.task</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{'search_default_filter_invoiced': 1,'search_default_filter_done': 1, 'search_default_filter_project': 1}</field>
        </record>

    <!-- MENU ITEMS -->
        <menuitem name="Billing Task" id="tasks_charge" sequence="50"
            parent="project_timesheet.menu_project_billing" action="action_task_invoice" />

    <!-- Windows actions -->
        <act_window name="Create Draft Invoices"
            res_model="task.billing.wizard"
            src_model="project.task"
            key2="client_action_multi"
            multi="True"
            view_mode="form"
            view_type="form"
            target="new"
            id="action_task_invoice_wizard"/>
            
            
     

</data>
</openerp>
