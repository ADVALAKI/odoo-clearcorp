<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <record id="view_task_billing_wizard_form" model="ir.ui.view">
            <field name="name">view.task.billing.wizard.form</field>
            <field name="model">task.billing.wizard</field>
            <field name="arch" type="xml">
                <form string="Task Billing Wizard" version="7.0">
                  <h1>
                      <span>Invoicing Task</span>
                  </h1>
                    <group>
	                        <field name="journal_id" class="oe_inline"/>
	                        <field name="invoice_date" class="oe_inline"/>
                        </group>
                    <footer>
                        <button string="Create" type="object" name="create_bill_tasks"
                            class="oe_highlight" confirm="Are you sure you want to continue?" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        
        <record id="view_sale_order_wizard_form" model="ir.ui.view">
            <field name="name">view.sale.order.wizard.form</field>
            <field name="model">sale.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Sale Order Wizard" version="7.0">
                  <h3>
                      <span>Quoting Features</span>
                  </h3>
                    <group>
                            <field name="sale_order_id" class="oe_inline"/>
                        </group>
                    <footer>
                        <button string="Add" type="object" name="generate_saleorder"
                            class="oe_highlight" confirm="Are you sure you want to continue?" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        
        
        
    </data>
</openerp>